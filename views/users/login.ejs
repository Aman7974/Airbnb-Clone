<!-- magic of ejs mate -->
<% layout("./layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <!-- requires attribute in html tag - (it makes field filling compulsory) styling depends on browser -->
                <input type="text" name="username" id="username" placeholder="enter your title" class="form-control" required >
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <!-- requires attribute in html tag - (it makes field filling compulsory) styling depends on browser -->
                <input type="password" name="password" id="password" placeholder="enter your password" class="form-control" required >
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>